import axios from "axios";
import {message} from "antd";

import routerLinks from "utils/router-links";

export const {{properCase nameService}}Service = {
  nameLink: '{{properCase nameService}}',
  get: async (params) => {
    const { data } = await axios.get(routerLinks({{properCase nameService}}Service.nameLink, "api"), { params });
    return data;
  },
  getById: async (id) => {
    const { data } = await axios.get(`${routerLinks({{properCase nameService}}Service.nameLink, "api")}/${id}`);
    return data;
  },
  post: async (values) => {
    const { data } = await axios.post(routerLinks({{properCase nameService}}Service.nameLink, "api"), values);
    if (data.message) message.success(data.message);
    return data;
  },
  put: async (values, id) => {
    const { data } = await axios.put(`${routerLinks({{properCase nameService}}Service.nameLink, "api")}/${id}`, values);
    if (data.message) message.success(data.message);
    return data;
  },
  delete: async (id) => {
    const { data } = await axios.delete(`${routerLinks({{properCase nameService}}Service.nameLink, "api")}/${id}`);
    if (data.message) message.success(data.message);
    return data;
  },
  brief: async (params) => {
    const {data} = await axios.get(`${routerLinks({{properCase nameService}}Service.nameLink, "api")}/brief` , {params});
    return data;
  },
};
